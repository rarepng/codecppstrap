{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe build active file",
            "command": "E:\\tungsten\\ming\\bin\\g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },
        {
            "label": "CMake: Configure Debug",
            "type": "shell",
            "command": "cmake --preset dbg",
            "group": "build"
          },
          {
            "label": "CMake: Build Debug",
            "type": "shell",
            "command": "cmake --build --preset build_dbg",
            "group": "build"
          },
        {
            "label": "astyle format current",
            "type": "shell",
            "command": "astyle",
            "args": ["-n","-t","${file}"],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "astyle format ALL",
            "type": "shell",
            "command": "astyle",
            "args": ["-n","-t","-r","${workspaceFolder}/src/*.cpp","${workspaceFolder}/include/*.hpp"],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ],
    "version": "2.0.0"
}
